{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "es6",
    "lib": ["ES6"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/libs/*": ["libs/*"],
      "@/loaders/*": ["loaders/*"],
      "@/sockets/*": ["sockets/*"],
      "@/workers/*": ["workers/*"],
      "@config": ["config.ts"],
      "@index": ["index.ts"],
    }
  },  
  "include": ["**/*.ts"]
}